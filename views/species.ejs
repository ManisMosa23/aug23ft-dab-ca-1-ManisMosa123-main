<!DOCTYPE html>
<html>
<head>
  <title>DAB - Adopt Animal - Species Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
</head>

<body>
  <% include('./partials/navbar.ejs', {user: user}) %>
  <div class="container-fluid mt-5">
    <h2 class="p-3 text-center">Species Management</h2>
    <div class="list-group">
      <div class="row px-3 py-1 w-100">
        <span class="col py-1 bg-noroff">Id</span>
        <span class="col py-1 bg-noroff">Name</span>
        <span class="col py-1 bg-noroff">Options</span>
      </div>
      <% species.forEach(function(species) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-light"><%= species.Id %></span>
          <span class="col py-1 bg-light"><%= species.Name %></span>
          <span class="col py-1 bg-light text-center">
            <!-- Update Species Form -->
            <form action="/species/update/<%= species.Id %>" method="POST" style="display: inline;">
              <input type="text" name="name" required placeholder="New Name">
              <button type="submit" class="btn-sm btn-warning">Update</button>
            </form>
            <!-- Delete Species Form -->
            <form action="/species/delete/<%= species.Id %>" method="POST" style="display: inline;">
              <button type="submit" class="btn-sm btn-danger">Delete</button>
            </form>
          </span>
        </div>
      <% }); %>
      <hr>
      <!-- Add New Species Form -->
      <div class="row">
        <div class="col-12 text-center mt-2">
          <form action="/species/add" method="POST">
            <input type="text" name="name" required placeholder="Species Name">
            <button type="submit" class="btn btn-success">Add New Species</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
