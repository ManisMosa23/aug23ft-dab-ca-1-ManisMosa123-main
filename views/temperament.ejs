<!DOCTYPE html>
<html>
  <head>
    <title>DAB - Adopt Animal - Temperament Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
  </head>

  <body>
    <% include('./partials/navbar.ejs', { user: user }) %>
    <div class="container-fluid mt-5">
      <h2 class="p-3 text-center">Temperament Management</h2>
      <div class="list-group">
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-noroff">Id</span>
          <span class="col py-1 bg-noroff">Name</span>
          <span class="col py-1 bg-noroff">Options</span>
        </div>
        <% temperaments.forEach(function(temp) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-light"><%= temp.id %></span>
          <span class="col py-1 bg-light"><%= temp.name %></span>
          <span class="col py-1 bg-light text-center">
            <!-- Update Temperament Form -->
            <form
              action="/temperament/update/<%= temp.id %>"
              method="POST"
              style="display: inline"
            >
              <input type="text" name="name" required placeholder="New Name" />
              <button type="submit" class="btn-sm btn-warning">Update</button>
            </form>
            <!-- Delete Temperament Form -->
            <form
              action="/temperament/delete/<%= temp.id %>"
              method="POST"
              style="display: inline"
            >
              <button type="submit" class="btn-sm btn-danger">Delete</button>
            </form>
          </span>
        </div>
        <% }); %>
        <hr />
        <!-- Add New Temperament Form -->
        <div class="row">
          <div class="col-12 text-center mt-2">
            <form action="/temperament/add" method="POST">
              <input
                type="text"
                name="name"
                required
                placeholder="Temperament Name"
              />
              <button type="submit" class="btn btn-success">
                Add New Temperament
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
